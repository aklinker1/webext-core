    "@vitest/coverage-v8": "^2.1.1",
    "@webext-core/fake-browser": "workspace:*",
    "chokidar": "^3.5.3",
    "linkedom": "^0.14.26",
    "lint-staged": "^15.2.9",
    "listr2": "^6.4.2",
    "playwright": "^1.47.0",
    "prettier": "^3.3.3",
    "simple-git-hooks": "^2.11.1",
    "ts-morph": "^23.0.0",
    "tsup": "^6.4.0",
    "tsx": "^4.17.0",
    "turbo": "^1.6.3",
