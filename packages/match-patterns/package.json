{
  "name": "@webext-core/match-patterns",
  "version": "1.0.2",
  "description": "Utilities for working with match patterns.",
  "license": "MIT",
  "keywords": [
    "web-extension",
    "browser-extension",
    "chrome-extension",
    "webext",
    "web-ext",
