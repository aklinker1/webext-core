{
  "name": "@webext-core/messaging",
  "version": "1.2.0",
  "description": "Light weight, type-safe wrapper around the web extension messaging APIs. Supports all browsers (Chrome, Firefox, Safari)",
  "license": "MIT",
  "keywords": [
    "web-extension",
    "browser-extension",
    "chrome-extension",
    "webext",
    "web-ext",
    "chrome",
    "firefox",
    "safari",
    "browser",
    "extension",
    "message",
    "messaging"
  ],
  "homepage": "https://github.com/aklinker1/webext-core/tree/main/packages/messaging",
  "repository": {
    "type": "git",
    "url": "https://github.com/aklinker1/webext-core",
    "directory": "packages/messaging"
  },
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "lib"
  ],
  "main": "lib/index.cjs",
  "module": "lib/index.js",
  "types": "lib/index.d.ts",
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "require": "./lib/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --clean --out-dir lib --dts --format esm,cjs,iife --global-name webExtCoreMessaging",
    "build:dependencies": "cd ../.. && turbo run build --filter=@webext-core/messaging^...",
    "test": "vitest -r src",
    "test:coverage": "vitest run -r src --coverage",
    "compile": "vitest typecheck"
  },
  "dependencies": {
    "webextension-polyfill": "^0.10.0"
  },
  "devDependencies": {
    "@types/webextension-polyfill": "^0.9.1",
    "@vitest/coverage-c8": "^0.24.5",
    "@webext-core/fake-browser": "workspace:*",
    "tsconfig": "workspace:*",
    "tsup": "^6.4.0",
    "typescript": "^4.8.4",
    "vitest": "^0.28.5"
  }
}
